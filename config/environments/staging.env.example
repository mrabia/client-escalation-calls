# Staging Environment Configuration
# Copy to Railway staging environment variables

# =============================================================================
# CORE SETTINGS
# =============================================================================
NODE_ENV=staging
PORT=3000
API_VERSION=v1
LOG_LEVEL=debug

# =============================================================================
# DATABASE (Auto-set by Railway PostgreSQL)
# =============================================================================
# DATABASE_URL=postgresql://...  # Auto-set by Railway
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# =============================================================================
# REDIS (Auto-set by Railway Redis)
# =============================================================================
# REDIS_URL=redis://...  # Auto-set by Railway
REDIS_TTL=1800

# =============================================================================
# AUTHENTICATION (REQUIRED - Use different secrets than production!)
# =============================================================================
JWT_SECRET=<staging-jwt-secret>
JWT_REFRESH_SECRET=<staging-refresh-secret>
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# =============================================================================
# ENCRYPTION (REQUIRED - Use different key than production!)
# =============================================================================
ENCRYPTION_KEY=<staging-encryption-key>

# =============================================================================
# EMAIL - SMTP (Use test/sandbox credentials)
# =============================================================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<mailtrap-user>
SMTP_PASSWORD=<mailtrap-password>
SMTP_FROM_NAME=Payment Collection (Staging)
SMTP_FROM_EMAIL=staging@yourdomain.com

# =============================================================================
# TWILIO - PHONE/SMS (Use test credentials)
# =============================================================================
TWILIO_ACCOUNT_SID=<twilio-test-account-sid>
TWILIO_AUTH_TOKEN=<twilio-test-auth-token>
TWILIO_PHONE_NUMBER=+15005550006
TWILIO_WEBHOOK_URL=https://staging-app.up.railway.app/api/v1/twilio/webhook

# =============================================================================
# AI PROVIDERS (Optional - Use lower tier/test keys)
# =============================================================================
OPENAI_API_KEY=<openai-api-key>
ANTHROPIC_API_KEY=<anthropic-api-key>

# =============================================================================
# SECURITY (More permissive for testing)
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://staging.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
TRUST_PROXY=true

# =============================================================================
# COMPLIANCE (Can be relaxed for testing)
# =============================================================================
ENABLE_DO_NOT_CALL_CHECK=false
ENABLE_TCPA_COMPLIANCE=false
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# FEATURE FLAGS (Enable all for testing)
# =============================================================================
ENABLE_EMAIL_AGENT=true
ENABLE_PHONE_AGENT=true
ENABLE_SMS_AGENT=true
ENABLE_RESEARCH_AGENT=true
ENABLE_AI_GENERATION=true
ENABLE_VECTOR_MEMORY=false

# =============================================================================
# BUSINESS RULES (Relaxed for testing)
# =============================================================================
MAX_DAILY_CONTACTS_PER_CUSTOMER=10
CAMPAIGN_COOLDOWN_HOURS=1
BUSINESS_HOURS_START=00:00
BUSINESS_HOURS_END=23:59
DEFAULT_TIMEZONE=America/New_York

# =============================================================================
# MONITORING & DEBUG
# =============================================================================
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=15000
DEBUG=true
PRETTY_LOGS=true
