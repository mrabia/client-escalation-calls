# Production Environment Configuration
# Copy to Railway environment variables

# =============================================================================
# CORE SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
API_VERSION=v1
LOG_LEVEL=warn

# =============================================================================
# DATABASE (Auto-set by Railway PostgreSQL)
# =============================================================================
# DATABASE_URL=postgresql://...  # Auto-set by Railway
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_SSL=true

# =============================================================================
# REDIS (Auto-set by Railway Redis)
# =============================================================================
# REDIS_URL=redis://...  # Auto-set by Railway
REDIS_TTL=3600

# =============================================================================
# AUTHENTICATION (REQUIRED - Generate with npm run security:generate-secrets)
# =============================================================================
JWT_SECRET=<generate-with-security-script>
JWT_REFRESH_SECRET=<generate-with-security-script>
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# ENCRYPTION (REQUIRED)
# =============================================================================
ENCRYPTION_KEY=<generate-64-char-hex-key>

# =============================================================================
# EMAIL - SMTP
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=<sendgrid-api-key>
SMTP_FROM_NAME=Payment Collection Team
SMTP_FROM_EMAIL=collections@yourdomain.com

# =============================================================================
# TWILIO - PHONE/SMS
# =============================================================================
TWILIO_ACCOUNT_SID=<twilio-account-sid>
TWILIO_AUTH_TOKEN=<twilio-auth-token>
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
TWILIO_WEBHOOK_URL=https://your-app.up.railway.app/api/v1/twilio/webhook

# =============================================================================
# AI PROVIDERS (Optional)
# =============================================================================
OPENAI_API_KEY=<openai-api-key>
ANTHROPIC_API_KEY=<anthropic-api-key>

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TRUST_PROXY=true

# =============================================================================
# COMPLIANCE
# =============================================================================
ENABLE_DO_NOT_CALL_CHECK=true
ENABLE_TCPA_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_EMAIL_AGENT=true
ENABLE_PHONE_AGENT=true
ENABLE_SMS_AGENT=true
ENABLE_RESEARCH_AGENT=false
ENABLE_AI_GENERATION=true
ENABLE_VECTOR_MEMORY=false

# =============================================================================
# BUSINESS RULES
# =============================================================================
MAX_DAILY_CONTACTS_PER_CUSTOMER=3
CAMPAIGN_COOLDOWN_HOURS=4
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
DEFAULT_TIMEZONE=America/New_York

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30000
