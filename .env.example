# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/client_escalation_calls
REDIS_URL=redis://localhost:6379

# Message Queue Configuration
RABBITMQ_URL=amqp://localhost:5672
KAFKA_BROKERS=localhost:9092

# External Service Configuration
# Email Services
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Phone Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SMS Services  
TWILIO_SMS_SERVICE_SID=your_sms_service_sid

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# ElasticSearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_PHONE_AGENT=true
ENABLE_SMS_AGENT=true
ENABLE_EMAIL_AGENT=true
ENABLE_RESEARCH_AGENT=true