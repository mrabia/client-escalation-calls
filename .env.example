# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/client_escalation_calls
DB_HOST=localhost
DB_PORT=5432
DB_NAME=client_escalation_calls
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=1800

# Message Queue Configuration
RABBITMQ_URL=amqp://localhost:5672
KAFKA_BROKERS=localhost:9092

# External Service Configuration
# Email Services (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=Payment Collection Team
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Email Services (IMAP for reading responses)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=your_email@gmail.com
IMAP_PASSWORD=your_app_password

# OAuth (Optional)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# Twilio (Phone & SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_SMS_SERVICE_SID=your_sms_service_sid
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ElasticSearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AI & LLM Configuration (for future implementation)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# Vector Database (for future implementation)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=escalation-memory

# Qdrant (alternative to Pinecone)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Business Rules
MAX_DAILY_CONTACTS_PER_CUSTOMER=3
CAMPAIGN_COOLDOWN_HOURS=4
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
DEFAULT_TIMEZONE=America/New_York

# Compliance
ENABLE_DO_NOT_CALL_CHECK=true
ENABLE_TCPA_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true

# Feature Flags
ENABLE_EMAIL_AGENT=true
ENABLE_PHONE_AGENT=true
ENABLE_SMS_AGENT=true
ENABLE_RESEARCH_AGENT=false
ENABLE_AI_GENERATION=false
ENABLE_VECTOR_MEMORY=false

# Development
DEBUG=false
PRETTY_LOGS=true